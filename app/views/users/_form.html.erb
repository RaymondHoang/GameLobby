<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %>
  </div>

<div class = "field">
  <%= f.label :email%><br>
  <%= f.text_field :email%>
</div>
<div class = "field">
  <%= f.label :password%><br>
  <%= f.password_field :password%>
</div>
<div class = "field">
  <%= f.label :password_confirmation%><br>
  <%= f.password_field :password_confirmation%>
</div>
  <div class="actions">
    <%= f.submit class: "btn btn-large btn-primary" %>
  </div>
<% end %>
