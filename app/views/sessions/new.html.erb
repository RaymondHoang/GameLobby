<%provide(:title, 'Sign In')%>
<h1>Sign In</h1>
<%=form_for(:session, url: sessions_path) do |f|%>
<div class="field">
  <%=f.label :nickname%>
  <%=f.text_field :nickname%>
  </div>
<div class="field">
  <%=f.label :password%>
  <%=f.password_field :password%>
</div>
<div><%=f.submit 'Sign In', :class => "btn btn-large btn-primary"%>
</div>
<% if flash[:message] %>
<%= flash[:message] %>
<% end %>
<%end%>
<div> Not a member? <%= link_to "Sign up!", "users/new", class: "btn btn-large btn-primary" %> </div>
