<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Max players</th>
      <th>Kind</th>
      <th>Instance</th>
      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.room %></td>
        <td><%= game.max_players %></td>
        <td><%= game.kind %></td>
        <td><%= game.instance %></td>
        <% if game.password_digest.nil?%>
        <td>No</td>
        <%else%>
        <td>Yes</td>
        <%end%>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', "games/choose" %>
